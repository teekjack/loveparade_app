<!DOCTYPE html>
<html>
  <head>
		<link rel="shortcut icon" href="/favicon.ico" />
    <title>Loveparade Videos</title>
    <%= csrf_meta_tag %>
		<%= render 'layouts/stylesheets' %>
		<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js", "http://maps.google.com/maps/api/js?sensor=false", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js", 'rails', 'application' %>
  </head>
  <body>
		<header></header>
		<div style="position:absolute; top:0px; background:black; width:100%; opacity:0.7; height:29px; z-index:2;">
						<%= render 'layouts/navbar' %> 
		</div>
		<div class="container">
			<section class="round">
				<% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
    		<%= yield %>
			</section>
		</div>
		<%= debug(params) if Rails.env.development? %>

  </body>
</html>

